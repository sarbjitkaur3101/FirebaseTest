<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_emailProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_nameProfile"
        app:layout_constraintTop_toBottomOf="@id/txt_emailProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_mobProfile"
        app:layout_constraintTop_toBottomOf="@id/edt_nameProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_updateProfile"
        app:layout_constraintTop_toBottomOf="@id/edt_mobProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_deleteProfile"
        app:layout_constraintTop_toBottomOf="@id/btn_updateProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Delete"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signoutProfile"
        app:layout_constraintTop_toBottomOf="@id/btn_deleteProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Log Out"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>